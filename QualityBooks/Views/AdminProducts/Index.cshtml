@model IEnumerable<QualityBooks.Models.Product>
@using QualityBooks.Models
@{
    ViewData["Title"] = "Index";
}
<div class="maincontent-area">
    <div class="container">
        <div class="row">
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SupplierId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var id = item.Id;
                        <tr>
                            <td>
                                <img src="@Url.Action("GetProductImage", "AdminProducts", new{id = id})" width="50" height="50" />

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategroyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Supplier.FirstName)
                            </td>
                            <td>
                                $@Html.DisplayFor(modelItem => item.ProductPrice)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>