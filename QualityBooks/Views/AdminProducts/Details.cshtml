@model QualityBooks.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="maincontent-area">
    <div class="container">
        <div class="row">
            <div>
                <h4>Product</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductPrice)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductPrice)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Category.CategroyName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.SupplierId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Supplier.FirstName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductImage)
                    </dt>
                    <dd>
                        <img style="width: 150px; height: auto;" src="@Url.Action("GetProductImage", "AdminProducts", new{id = Model.Id})" alt="Product Image">
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
